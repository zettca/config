{
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "<BUILTIN_MODULES>",
    "^react$",
    "^react-.*",
    "<THIRD_PARTY_MODULES>",
    "^~/(.*)$",
    "^#/(.*)$",
    "^[./]"
  ],

  "overrides": [
    {
      "files": ["pnpm-lock.yaml"],
      "options": { "rangeEnd": 0 }
    }
  ]
}
